<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.kumarharsh.informza">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AboutActivity"
            android:theme="@style/Home"></activity>
        <activity
            android:name=".activities.NewPostActivity"
            android:theme="@style/NewPost" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Home" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>